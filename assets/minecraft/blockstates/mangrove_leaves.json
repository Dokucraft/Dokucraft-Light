{
  "multipart": [
    { "when": { "OR": [
        {"persistent":false, "distance":1},
        {"persistent":false, "distance":2},
        {"persistent":false, "distance":3},
        {"persistent":false, "distance":4},
        {"persistent":false, "distance":5},
        {"persistent":false, "distance":6},
        {"persistent":true}
      ]},
      "apply": {"model": "block/mangrove_leaves"}
    },
    { "when": { "OR": [
        {"persistent":false, "distance":1},
        {"persistent":false, "distance":2},
        {"persistent":false, "distance":3},
        {"persistent":false, "distance":4},
        {"persistent":false, "distance":5},
        {"persistent":false, "distance":6},
        {"persistent":true}
      ]},
      "apply": [
        {"model": "block/leaves/mangrove_leaves/top0"},
        {"model": "block/leaves/mangrove_leaves/top1"},
        {"model": "block/leaves/mangrove_leaves/top2"},
        {"model": "block/leaves/mangrove_leaves/top3"}
      ]
    },
    { "when": { "OR": [
        {"persistent":false, "distance":1},
        {"persistent":false, "distance":2},
        {"persistent":false, "distance":3},
        {"persistent":false, "distance":4},
        {"persistent":false, "distance":5},
        {"persistent":false, "distance":6},
        {"persistent":true}
      ]},
      "apply": [
        {"model": "block/leaves/mangrove_leaves/bottom0"},
        {"model": "block/leaves/mangrove_leaves/bottom1"},
        {"model": "block/leaves/mangrove_leaves/bottom2"},
        {"model": "block/leaves/mangrove_leaves/bottom3"}
      ]
    },
    { "when": {"persistent":false, "distance":7}, 
      "apply": {"model": "block/dead_mangrove_leaves"}
    },
    { "when": {"persistent":false, "distance":7},
      "apply": [
        {"model": "block/leaves/dead_mangrove_leaves/top0"},
        {"model": "block/leaves/dead_mangrove_leaves/top1"},
        {"model": "block/leaves/dead_mangrove_leaves/top2"},
        {"model": "block/leaves/dead_mangrove_leaves/top3"}
      ]
    },
    { "when":{"persistent":false, "distance":7},
      "apply": [
        {"model": "block/leaves/dead_mangrove_leaves/bottom0"},
        {"model": "block/leaves/dead_mangrove_leaves/bottom1"},
        {"model": "block/leaves/dead_mangrove_leaves/bottom2"},
        {"model": "block/leaves/dead_mangrove_leaves/bottom3"}
      ]
    }
  ]
}